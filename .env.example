# ============================================
# CryptoOrchestrator Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Server Configuration
NODE_ENV=development
PORT=8000
HOST=127.0.0.1

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
EXCHANGE_KEY_ENCRYPTION_KEY=your-encryption-key-change-in-production-32-chars-minimum

# Database Configuration
# ============================================
# Option 1: Neon PostgreSQL (Recommended for Production)
# Get a free database at: https://neon.tech
# Use the connection string from your Neon console
# For web apps, use the pooled endpoint (-pooler) for better performance
# DATABASE_URL=postgresql+asyncpg://user:password@ep-xyz-123.us-east-2.aws.neon.tech-pooler/neondb?sslmode=require

# Option 2: Local PostgreSQL (for Development)
DATABASE_URL=postgresql+asyncpg://crypto_user:crypto_pass@localhost:5432/cryptoorchestrator

# Option 3: SQLite (for Testing/Development)
# DATABASE_URL=sqlite+aiosqlite:///./crypto_orchestrator.db

# Database Pool Configuration (adjust based on your tier)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Stripe Payment Processing (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Exchange API Keys (Optional - for live trading)
# Kraken (Primary)
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_SECRET_KEY=your_kraken_secret_key

# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

# Coinbase
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET_KEY=your_coinbase_secret_key
COINBASE_PASSPHRASE=your_coinbase_passphrase

# KuCoin
KUCOIN_API_KEY=your_kucoin_api_key
KUCOIN_SECRET_KEY=your_kucoin_secret_key
KUCOIN_PASSPHRASE=your_kucoin_passphrase

# Bybit
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET_KEY=your_bybit_secret_key

# Error Tracking & Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
ENVIRONMENT=development

# CORS & Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Feature Flags
USE_MOCK_KRAKEN=false
ENABLE_DISTRIBUTED_RATE_LIMIT=false

# Logging
LOG_LEVEL=INFO
